<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_color"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText_values"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/grey_color"
        android:ems="10"
        android:gravity="end"
        android:inputType="textPersonName"
        android:paddingTop="10pt"
        android:text="0"
        android:textColor="@color/white_back"
        android:textSize="40sp"
        tools:text="0" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/button_Ac"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/white_back"
                android:onClick="buClean"
                android:text="AC"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_plus_and_minus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/white_back"
                android:onClick="buttonClick"
                android:text="+/-"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_modulus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/white_back"
                android:onClick="buPercent"
                android:text="%"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_divide"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/corner_button"
                android:onClick="buttonClickMathOp"
                android:text="/"
                android:textColor="@color/text_color_corner_button"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/button_7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/white_back"
                android:onClick="buttonClick"
                android:text="7"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/white_back"
                android:onClick="buttonClick"
                android:text="8"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_9"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/white_back"
                android:onClick="buttonClick"
                android:text="9"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_multiply"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/corner_button"
                android:onClick="buttonClickMathOp"
                android:text="*"
                android:textColor="@color/text_color_corner_button"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/button_4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/white_back"
                android:onClick="buttonClick"
                android:text="4"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_5"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/white_back"
                android:onClick="buttonClick"
                android:text="5"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_6"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/white_back"
                android:onClick="buttonClick"
                android:text="6"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_minus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/corner_button"
                android:onClick="buttonClickMathOp"
                android:text="-"
                android:textColor="@color/text_color_corner_button"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/button_1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/white_back"
                android:onClick="buttonClick"
                android:text="1"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_2"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/white_back"
                android:onClick="buttonClick"
                android:text="2"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_3"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/white_back"
                android:onClick="buttonClick"
                android:text="3"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_plus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/corner_button"
                android:onClick="buttonClickMathOp"
                android:text="+"
                android:textColor="@color/text_color_corner_button"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_0"
            android:layout_width="60pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/white_back"
            android:onClick="buttonClick"
            android:text="0"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_dot"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/white_back"
            android:onClick="buttonClick"
            android:text="."
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_equal"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/corner_button"
            android:onClick="buttonClickEqual"
            android:text="="
            android:textColor="@color/text_color_corner_button"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>